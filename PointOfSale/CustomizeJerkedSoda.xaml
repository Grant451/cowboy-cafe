<UserControl x:Class="PointOfSale.CustomizeJerkedSoda"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="30" Text="Customize Jerked Soda"/>
            <CheckBox IsChecked="{Binding Path=CreamSoda}">CreamSoda</CheckBox>
            <CheckBox IsChecked="{Binding Path=OrangeSoda}">OrangeSoda</CheckBox>
            <CheckBox IsChecked="{Binding Path=Sarsparilla}">Sarsparilla</CheckBox>
            <CheckBox IsChecked="{Binding Path=BirchBeer}">BirchBeer</CheckBox>
            <CheckBox IsChecked="{Binding Path=RootBeer}">RootBeer</CheckBox>
            <CheckBox IsChecked="{Binding Path=Small}">Small</CheckBox>
            <CheckBox IsChecked="{Binding Path=Meduim}">Meduim</CheckBox>
            <CheckBox IsChecked="{Binding Path=Large}">Large</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
